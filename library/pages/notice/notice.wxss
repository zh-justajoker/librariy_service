/* pages/notice/notice.wxss */
page{
  background-color: #dedede;
  box-sizing:border-box;
}
.notice_content_point{
  flex-direction: row;
  display: flex;
  align-items: center;
}
.notice_content{
  flex-direction: row;
  display: flex;
  background-color: #fff;
  height: 80rpx;
  justify-content: space-between;
  padding: 0 20rpx;
  align-items: center;
  margin-bottom: 10rpx;
}
.point{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}
.notice_header{
  color: #969696;
  font-size: 28rpx;
  max-lines: 1;
  width: 475rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.notice_time{
  color: #969696;
  font-size: 24rpx;
}