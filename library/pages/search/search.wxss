/* pages/search/search.wxss */
page{
  background-color: #dedede;
  box-sizing:border-box;
  padding: 20rpx;
}
.search_row{
  height: 60rpx;
  display: flex;
}
.search_row input{
  background-color:white;
  flex: 1;
  padding-left: 20rpx;
  height: 100%;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.msg{
  margin-top: 20rpx;
  color: red;
  font-size: 26rpx;
}
.search_row button{
  height: 100%;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
}
.search_content{
  margin-top: 20rpx;
}
.search_item{
  background-color: white;
  width: 100%;
  flex-direction: row;
  display: flex;
  margin-bottom: 20rpx;
}
.search_item image{
  width: 120rpx;
  height: 100%;
}
.search_text{
  width: calc(100% - 140rpx);
  padding: 10rpx;
  display: flex;
  margin-left: 10rpx;
  flex-direction: column;
  justify-content: space-around;
}
.item_bname{
  font-size: 26rpx;
  color:#00008B;
}
.item_author{
  font-size: 24rpx;
  color:	#40E0D0;
}
.item_intro{
  font-size: 24rpx;
  color:#1E90FF;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}