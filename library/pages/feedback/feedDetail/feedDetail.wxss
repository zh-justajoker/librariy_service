/* pages/feedback/feedDetail/feedDetail.wxss */
page{
  padding: 30rpx;
  background-color: #eee;
}
.feedDetail{
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.feedDetail_time{
  text-align: center;
  margin-bottom: 40rpx;
  font-size: 26rpx;
}

.feedDetail_left{
  display: flex;
  flex-direction: row;
}
.feedDetail_left image{
  height: 80rpx;
  width: 80rpx;
}
.feedDetail_left_content{
  width: 450rpx;
  padding: 20rpx;
  background-color: #fff;
  text-align: justify;
  line-height: 180%;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #000;
  margin-left: 20rpx;
}
.feedDetail_noreply{
  margin-top: 80rpx;
  display: flex;
  justify-content: center;
}
.feedDetail_noreply_text{
  color: #fff;
  width: 350rpx;
  background-color: #00D8C9;
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 20rpx;
  text-align: center;
}
.right{
  margin-top: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.right_left{
  width: 20rpx;
}
.feedDetail_right{
  display: flex;
  flex-direction: row;
}
.feedDetail_right image{
  height: 80rpx;
  width: 80rpx;
  margin-right: 30rpx;
}
.feedDetail_right_content{
  width: 450rpx;
  padding: 20rpx;
  background-color: #00D8C9;
  text-align: justify;
  line-height: 180%;
  border-radius: 20rpx;
  font-size: 30rpx;
  color: #fff;
  margin-right: 20rpx;
}