<!--pages/feedback/myFeed/myFeed.wxml-->
<view class="myfeed">
  <view class="myfeed_header">在下方输入框中输入要反馈的内容</view>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class='top'>
          <view>
            <textarea placeholder="填写内容(0-140字)"name="content" auto-focus ></textarea>
      </view>
    </view>
      <button class='btn' form-type='submit'>提交</button> 
  </form>
</view>