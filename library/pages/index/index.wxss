/**index.wxss**/
.library_index{
  height: 100%;
}
.index_swp{
  margin: 10rpx;
  border-radius: 10rpx;
  overflow: hidden;
  height: 250rpx;
}
.index_swp image{
  width:100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
}
.index_notice{
  margin: 20rpx 10rpx;
}
.index_new_notice{
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.new_notice{
  color: red;
  font-size: 36rpx;
}
.all_notice{
  color: #969696;
  font-size: 24rpx;
  text-align: center;
  line-height: 36rpx;
}
.index_notice_content_point{
  height: 60rpx;
  flex-direction: row;
  display: flex;
  align-items: center;
}
.index_notice_content{
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.point{
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
}
.notice_content{
  color: #969696;
  font-size: 28rpx;
  max-lines: 1;
  width: 475rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.notice_time{
  color: #969696;
  font-size: 24rpx;
}
.index_list_item{
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.index_list_item navigator{
  margin-bottom: 20rpx;
  width: 25%;
  text-align: center;
}
.index_list_img{
  width: 80%;
  height: 190rpx;
} 
.index_list_author{
  font-size: 22rpx;
  color: #969696;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.index_list_bname{
  font-size: 26rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}