/* pages/recommend/recommend.wxss */
.header1{
  background-color: #f5f5f5;
}
.header {
  width: 100%;
  height: 80rpx;
  border-bottom: 1rpx solid #d6d6d6;
}
.header .header_con {
  width: 700rpx;
  height: 80rpx;
  margin: 0 auto;
  color: #333;
  font-size: 30rpx;
}
.header .header_con image{
  width: 44rpx;
  height: 44rpx;
}
.header .header_con .right{
  color: #ff4965;
}
.bottom{
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #d6d6d6;
  background-color: #fff;
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
}
.bottom .left{
  margin-left: 25rpx;
}
.bottom .left .select_none{
  width: 60rpx;
  height: 60rpx;
  border: 1rpx solid #d6d6d6;
  border-radius: 50%;
}
.bottom .right .all{
  color: #ff830f;
  font-size: 26rpx;
}
.bottom .right .gray{
  color: #666666;
  font-size: 22rpx;
}
.bottom .right .sure{
  margin-left: 22rpx;
  width: 220rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  background-color: #ff4965;
  color: #fff;
}

.myreco_content{
  width: 750rpx;
  margin-top: 15rpx;
  background-color: #ffffff;
}
.myreco_content_item{
  background-color: white;
  width: 100%;
  flex-direction: row;
  display: flex;
  display: -webkit-flex;
  border-bottom: 0.5rpx #A0A0A0 solid;
  padding: 10rpx 20rpx;
  margin-bottom: 10rpx;
}
.myreco_content_item .lefts{
  width: 40rpx;
  height: 100%;
  margin-right: 20rpx;
  padding-top: 60rpx;
}
.myreco_content_item .lefts image{
  width: 40rpx;
  height: 40rpx;
}

.checkeImg{
  width: 40rpx;
  height: 40rpx;
}
.myreco_content_item image{
  width: 140rpx;
  height: 100%;
}
.myreco_content_text{
  width: calc(100% - 140rpx);
  padding: 10rpx;
  display: flex;
  margin-left: 10rpx;
  flex-direction: column;
  justify-content: space-around;
}
.item_bname{
  font-size: 30rpx;
  color:#00008B;
}
.item_author{
  font-size: 26rpx;
  color:	#40E0D0;
}
.item_time{
  font-size: 24rpx;
  color:	#40E0D0;
}
.little_box{
  height: 90rpx;
}
.flex_center{
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
}
.flex_between{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
}
.flex_start{
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  align-items: center;
}
.flex_end{
  display: flex;
  display: -webkit-flex;
  justify-content: flex-end;
  align-items: center;
}